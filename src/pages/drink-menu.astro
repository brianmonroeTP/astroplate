---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import { getListPage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { render } from "astro:content";
import DrinkMenu from "@/layouts/helpers/DrinkMenu";
import drinks from "@/data/drinks.json";

const drinkIndex = await getListPage("drinkmenu", "-index");
const { Content } = await render(drinkIndex);
const { title, description, meta_title, image } = drinkIndex.data;

if (drinkIndex.data.draft) {
  return Astro.redirect("/404");
}
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="md:col-10 lg:col-8">
          {
            image && (
              <ImageMod
                class="mx-auto mb-6 rounded"
                src={image}
                width={1200}
                height={600}
                alt={title}
                format="webp"
              />
            )
          }
          <h2 set:html={markdownify(title)} class="h3 mb-6" />
          <div class="content mb-8">
            <Content />
          </div>
          <div class="my-8">
            <DrinkMenu client:load drinks={drinks} />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
